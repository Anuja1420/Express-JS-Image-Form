        <div class="container">
            <h1>Form Submission</h1>
            
            <div class="detail">
                <label>Name:</label>
                <span><%= name %></span>
            </div>

            <div class="detail">
                <label>Email:</label>
                <span><%= email %></span>
            </div>

            <div class="detail">
                <label>Age:</label>
                <span><%= age %></span>
            </div>

            <div class="detail">
                <label>Image:</label>
                <img src="/<%= imagePath %>" alt="Uploaded Image" height="200" width="200">
            </div>
            </div>
        

    </body>
</html>